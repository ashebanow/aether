<h1>Listing characters</h1>

<table>
  <tr>
  <% Character.content_columns.each do |column| %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>

  <% @characters.each do |character| %>
    <tr>
      <% for column in Character.content_columns %>
        <td><%=h character.send(column.name) %></td>
      <% end %>

      <td><%= link_to 'Show', character %></td>
      <td><%= link_to 'Edit', edit_character_path(character) %></td>
      <td><%= link_to 'Destroy', character, :confirm => 'Are you sure you want to destroy this character?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>

<br />
<%= link_to 'New character', :action => 'new' %>
